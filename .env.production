# Production Environment Configuration for PromptCraft
# DO NOT commit this file with actual values

# Application Settings
PROMPTCRAFT_ENV=production
PROMPTCRAFT_DEBUG=false
PROMPTCRAFT_LOG_LEVEL=warn

# File Paths
PROMPTCRAFT_CONFIG_DIR=~/.config/promptcraft
PROMPTCRAFT_CONFIG_FILE=config.json

# Feature Flags
PROMPTCRAFT_ENABLE_ANALYTICS=true
PROMPTCRAFT_ENABLE_TELEMETRY=true
PROMPTCRAFT_ENABLE_CACHE=true

# UI Settings
PROMPTCRAFT_DEFAULT_THEME=cyberpunk
PROMPTCRAFT_ENABLE_ANIMATIONS=true
PROMPTCRAFT_AUTO_SAVE=false

# Security Settings
PROMPTCRAFT_VALIDATE_INPUT=true
PROMPTCRAFT_SANITIZE_OUTPUT=true
PROMPTCRAFT_MAX_INPUT_LENGTH=5000

# Performance Settings
PROMPTCRAFT_CACHE_TTL=7200
PROMPTCRAFT_REQUEST_TIMEOUT=15000
PROMPTCRAFT_MAX_RETRIES=2

# Monitoring (set actual values in production)
PROMPTCRAFT_SENTRY_DSN=
PROMPTCRAFT_LOG_FILE=/var/log/promptcraft/app.log