# PromptCraft Environment Configuration

# Application Settings
PROMPTCRAFT_ENV=development
PROMPTCRAFT_DEBUG=true
PROMPTCRAFT_LOG_LEVEL=info

# API Server Settings
PROMPTCRAFT_API_HOST=0.0.0.0
PROMPTCRAFT_API_PORT=8080
PROMPTCRAFT_API_KEY=your-secret-api-key-here

# File Paths
PROMPTCRAFT_CONFIG_DIR=~/.config/promptcraft
PROMPTCRAFT_CONFIG_FILE=config.json

# Security Settings
PROMPTCRAFT_VALIDATE_INPUT=true
PROMPTCRAFT_SANITIZE_OUTPUT=true
PROMPTCRAFT_MAX_INPUT_LENGTH=10000

# Performance Settings
PROMPTCRAFT_CACHE_TTL=3600
PROMPTCRAFT_REQUEST_TIMEOUT=30000
PROMPTCRAFT_MAX_RETRIES=3

# Feature Flags
PROMPTCRAFT_ENABLE_ANALYTICS=true
PROMPTCRAFT_ENABLE_TELEMETRY=false
PROMPTCRAFT_ENABLE_CACHE=true

# Database Settings (for analytics)
PROMPTCRAFT_DB_PATH=~/.config/promptcraft/analytics.db

# Integration Settings
PROMPTCRAFT_INTEGRATIONS_CONFIG=~/.config/promptcraft/integrations.json

# Batch Processing Settings
PROMPTCRAFT_MAX_BATCH_SIZE=100
PROMPTCRAFT_MAX_CONCURRENT_BATCHES=5
PROMPTCRAFT_BATCH_TIMEOUT=300

# Email Integration (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=your-email@gmail.com

# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord Integration (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Database Integration (optional)
DATABASE_URL=sqlite:///enhanced_prompts.db
# DATABASE_URL=postgresql://user:password@localhost/promptcraft

# Webhook Integration (optional)
WEBHOOK_URL=https://your-webhook-endpoint.com/promptcraft
WEBHOOK_METHOD=POST